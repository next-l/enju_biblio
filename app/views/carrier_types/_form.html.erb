<%= simple_nested_form_for(@carrier_type) do |f| %>
  <%= f.error_messages -%>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :display_name %><br />
    <%= f.text_area :display_name %>
  </div>
  <% if defined?(EnjuCirculation) and !@carrier_type.new_record? %>
    <%= render 'carrier_types/checkout_form', :f => f %>
  <% end %>
  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
