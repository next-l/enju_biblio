<%= simple_form_for(@content_type, validate: true) do |f| -%>
  <%= f.error_messages -%>

  <div class="form-group">
    <%= f.label :name -%><br />
    <%= f.text_field :name, class: 'resource_title' -%>
  </div>

  <div class="form-group">
    <%= f.label :display_name -%><br />
    <%= f.text_area :display_name, class: 'form-control' -%>
  </div>

  <div class="form-group">
    <%= f.label :note -%><br />
    <%= f.text_area :note, class: 'form-control' -%>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
