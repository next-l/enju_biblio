.row
  h1.title
    = t('page.listing', model: t('activerecord.models.agent_relationship'))
  #content_list.col-md-9
    table.table.table-striped.index
      tr
        th
          = t('activerecord.attributes.agent_relationship.parent_id')
          | :
        th
          = t('activerecord.attributes.agent_relationship.child_id')
          | :
        th
        th
        th
      - @agent_relationships.each do |agent_relationship|
        tr
          td
            = link_to agent_relationship.parent.full_name, agent_relationship.parent
          td
            = link_to agent_relationship.child.full_name, agent_relationship.child
          td
            = link_to t('page.show'), agent_relationship
          td
            = link_to t('page.edit'), edit_agent_relationship_path(agent_relationship)
          td
            = link_to t('page.destroy'), agent_relationship, data: {confirm: t('page.are_you_sure')}, method: :delete
    = paginate(@agent_relationships)
  #submenu.col-md-3
  ul.list-group
    li.list-group-item
      = link_to t('page.new', model: t('activerecord.models.agent_relationship')), new_agent_relationship_path
