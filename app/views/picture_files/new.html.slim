.row
  h1.title
    = t('page.new', model: t('activerecord.models.picture_file'))
  #content_list.col-md-9
    = form_for(@picture_file, url: picture_files_path, html: { multipart: true, method: :post }) do |f|
      - if @picture_file.errors.any?
        #error_explanation
          ul
            li
              = t('picture_file.invalid_file')
      = f.hidden_field :picture_attachable_id
      = f.hidden_field :picture_attachable_type
      .form-group
        = f.label t('page.file')
        br
        = f.file_field :picture
      .form-control
        = f.submit class: 'btn btn-default'
  #submenu.col-md-3
  ul
    li
      = link_to t('page.back'), :back
