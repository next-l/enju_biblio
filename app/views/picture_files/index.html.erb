<%- case @attachable.class.to_s when 'Shelf' -%>
  <%= render 'index_shelf', :shelf => @attachable -%>
<%- when 'Manifestation' -%>
  <%= render 'index_manifestation', manifestation: @attachable -%>
<%- when 'Agent' -%>
  <%= render 'index_agent', agent: @attachable -%>
<%- when 'Event' -%>
  <%= render 'index_event', :event => @attachable -%>
<%- else -%>
  <%= render 'index' -%>
<%- end -%>
