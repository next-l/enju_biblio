#content_detail.ui-corner-all.ui-widget-content
  h1.title
    = t('page.showing', model: t('activerecord.models.agent_merge'))
  #content_list
    p#notice
      = notice
    p
      strong
        = t('activerecord.models.agent')
        | :
      = link_to @agent_merge.agent.full_name, @agent_merge.agent
    p
      strong
        = t('activerecord.models.agent_merge_list')
        | :
      = link_to @agent_merge.agent_merge_list.title, @agent_merge.agent_merge_list
#submenu.ui-corner-all.ui-widget-content
  ul
    li
      = link_to t('page.add', model: t('activerecord.models.agent')), @agent_merge.agent_merge_list
    li
      = link_to t('page.edit'), edit_agent_merge_path(@agent_merge)
    li
      = back_to_index(flash[:page_info])
