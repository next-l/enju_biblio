#content_detail.ui-corner-all.ui-widget-content
  h1.title
    = t('page.showing', model: t('activerecord.models.produce'))
  #content_list
    p#notice
      = notice
    p
      strong
        = t('activerecord.models.agent')
        | :
      =link_to @produce.agent.full_name, @produce.agent
    p
      strong
        = t('activerecord.models.manifestation')
        | :
      = link_to @produce.manifestation_original_title, @produce.manifestation
#submenu.ui-corner-all.ui-widget-content
  ul
    li
      = link_to t('page.back_to', model: t('activerecord.models.agent')), agents_path(manifestation_id: @produce.manifestation_id)
    li
      = link_to t('page.back_to', model: t('activerecord.models.manifestation')), manifestations_path(publisher_id: @produce.agent_id)
