#content_detail.ui-corner-all.ui-widget-content
  h1.title
    = t('page.new', model: t('activerecord.models.import_request'))
  #content_list
    p#notice
      = notice
    = form_for(@import_request) do |f|
      = f.error_messages
      .field
        = f.label :isbn
        br
        = f.search_field :isbn, class: 'resource_isbn_issn'
        = f.submit 'data-disable-with' => t('page.saving')
      = javascript_tag("$(function(){$('#import_request_isbn').focus()})")
#submenu.ui-corner-all.ui-widget-content
  ul
    li
      = link_to t('page.back'), :back
    li
      = link_to t('page.listing', model: t('activerecord.models.import_request')), import_requests_path
    li
      = link_to t('manifestation.add'), new_manifestation_path
    li
      = link_to t('page.import_from_file'), page_import_path
