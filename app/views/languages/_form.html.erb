<%= simple_form_for(@language, validate: true) do |f| %>
  <%= f.error_messages %>

  <div class="form-group">
    <%= f.label :name %>:<br />
    <%= @language.name %>
  </div>

  <div class="form-group">
    <%= f.label :native_name %><br />
    <%= f.text_field :native_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :display_name %><br />
    <%= f.text_area :display_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :iso_639_1 %><br />
    <%= f.text_field :iso_639_1 %>
  </div>

  <div class="form-group">
    <%= f.label :iso_639_2 %><br />
    <%= f.text_field :iso_639_2 %>
  </div>

  <div class="form-group">
    <%= f.label :iso_639_3 %><br />
    <%= f.text_field :iso_639_3 %>
  </div>

  <div class="form-group">
    <%= f.label :note %><br />
    <%= f.text_area :note, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
